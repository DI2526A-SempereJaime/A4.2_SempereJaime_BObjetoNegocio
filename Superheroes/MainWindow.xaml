
    <Window x:Class="Superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Superheroes"
        Title="Superhéroes - SOLUCIÓN"
        MinWidth="400" MinHeight="300">
        <Window.Resources>
            <local:convertidor1 x:Key="convertidor1"/>
            <local:convertidor2 x:Key="convertidor2"></local:convertidor2>
            <Style x:Key="TituloStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="36"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Window.Resources>

        <Grid Background = "{Binding superheroe, Converter={StaticResource convertidor1}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <DockPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Iron Man"
                       Style="{StaticResource TituloStyle}"
                       FontSize="40" FontWeight="Bold" Foreground="White"
                       DockPanel.Dock="Left"/>
                <Image Source="/Assets/avengers.png"
                   Height="50"
                   DockPanel.Dock="Left"
                   Stretch="Uniform"
                   Visibility="{Binding Vengador, Converter={StaticResource convertidor2}}"/>
                <Image Source="/Assets/xmen.png"
                   Height="50"
                   DockPanel.Dock="Left"
                   Stretch="Uniform"
                   Visibility="{Binding Xmen, Converter={StaticResource convertidor2}}"/>
            </DockPanel>

            <Border Grid.Row="1" Margin="10" BorderThickness="2" BorderBrush="Black">
                <Image Source="/Assets/IronMan.jpg"
                   Stretch="Fill" 
                   StretchDirection="Both"/>
            </Border>


            <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="10">
                <Image Source="/Assets/arrow.png" RenderTransformOrigin="0.5,0.5" MouseDown="FlechaIzquierda_Click"/>
                <TextBlock Text="1/3" FontSize="20" FontWeight="Bold" Margin="5"/>
                <Image Source="/Assets/arrow.png" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <RotateTransform Angle="180"/>
                    </Image.RenderTransform>
                </Image>
            </StackPanel>
        </Grid>
    </Window>